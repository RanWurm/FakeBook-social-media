<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- The bottom border -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Change the color to your desired border color -->
        </shape>
    </item>
</layer-list>
